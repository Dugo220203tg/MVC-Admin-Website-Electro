@model TrangQuanLy.Models.HoaDonViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "_Footer-Header";
}
<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary rounded h-100 p-4">
        <h5 class="mb-4">Sửa sản phẩm</h5>
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div class="form-content">
                <div class="form-fields">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="MaHD" />
                    <div class="form-group" readonly>
                        <label asp-for="MaKH" class="control-label">Mã khác hàng</label>
                        <input asp-for="MaKH" class="form-control" />
                        <span asp-validation-for="MaKH" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="max-height: 150px; overflow: auto;">
                        <label asp-for="HoTen" class="control-label">Họ Tên</label>
                        <input asp-for="HoTen" class="form-control" style="resize: vertical;" />
                        <span asp-validation-for="HoTen" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DienThoai" class="control-label">Điện Thoại</label>
                        <input asp-for="DienThoai" class="form-control" />
                        <span asp-validation-for="DienThoai" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NgayDat" class="control-label">Ngày đặt</label>
                        <input asp-for="NgayDat" class="form-control" />
                        <span asp-validation-for="NgayDat" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DiaChi" class="control-label">Địa chỉ</label>
                        <input asp-for="DiaChi" class="form-control" />
                        <span asp-validation-for="DiaChi" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CachThanhToan" class="control-label">Cách thanh toán</label>
                        <input asp-for="CachThanhToan" class="form-control" />
                        <span asp-validation-for="CachThanhToan" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CachVanChuyen" class="control-label">Cách vận chuyển</label>
                        <input asp-for="CachVanChuyen" class="form-control" />
                        <span asp-validation-for="CachVanChuyen" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhiVanChuyen" class="control-label">Phí vận chuyển</label>
                        <input asp-for="PhiVanChuyen" class="form-control" />
                        <span asp-validation-for="PhiVanChuyen" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <textarea asp-for="GhiChu" class="form-control" placeholder="Leave a comment here" id="floatingTextarea" style="height: 150px;"></textarea>
                        <label for="floatingTextarea">Ghi chú</label>
                    </div>
@*                     <td style="color: white;">
                        <select id="selectTrangThai-@Model.MaHD" class="form-select form-select-sm" data-original-value="@Model.MaTrangThai" onchange="confirmChangeTrangThai(@Model.MaHD, this)" style="color:beige">
                            @if (Model != null && Model.MaTrangThai != null)
                            {
                                @await Component.InvokeAsync("TrangthaiHd", new { selectedValue = Model.MaTrangThai })
                            }
                        </select>
                    </td> *@
                </div>
                <div class="col-md-5 order-details">
                    <div class="section-title text-center">
                        <h3 class="title">Chi Tiết Hóa Đơn</h3>
                    </div>
                    <div class="order-summary">
                        <div class="order-col">
                            <div><strong>Sản Phẩm</strong></div>
                            <div><strong>Tổng</strong></div>
                        </div>
                        <div class="order-products">
                            @foreach (var chiTiet in Model.ChiTietHds)
                            {
                                <div class="order-col">
                                    <!-- Hiển thị số lượng và tên hàng hóa -->
                                    <div>@chiTiet.SoLuong x @chiTiet.TenHangHoa</div>
                                    <!-- Hiển thị tổng giá cho sản phẩm -->
                                    <div>@String.Format("{0:0}$", chiTiet.DonGia * chiTiet.SoLuong)</div>
                                </div>
                                    <img src="~/Hinh/Hinh/HangHoa/@chiTiet.MaHH/@chiTiet.FirstImageUrl" alt="@chiTiet.TenHangHoa" style="width:80px;height:80px">
                            }
                        </div>

                        <div class="order-col">
                            <div><strong>TOTAL</strong></div>
                            <div>
                                <strong class="order-total">
                                    @String.Format("{0:0}$", Model.ChiTietHds.Sum(c => c.DonGia * c.SoLuong))
                                </strong>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group submit-button">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                </div>
        </form>
    </div>
    <a asp-action="Index" class="close-button">X</a>
</div>
<style>
    .preview-image {
        max-width: 100px;
        height: auto;
        margin-bottom: 10px;
        border: 1px solid #ddd;
        padding: 5px;
        border-radius: 5px;
    }

    .order-details {
        background-color: #fff;
        padding: 20px;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .section-title {
        margin-bottom: 20px;
    }

        .section-title .title {
            font-size: 24px;
            font-weight: bold;
            color: #333;
            text-transform: uppercase;
        }

    .order-summary {
        margin-top: 20px;
    }

    .order-col {
        display: flex;
        justify-content: space-between;
        padding: 10px 0;
        border-bottom: 1px solid #e0e0e0;
    }

        .order-col:last-child {
            border-bottom: none;
        }

        .order-col strong {
            font-weight: bold;
        }

    .order-products .order-col {
        padding: 5px 0;
        font-size: 16px;
    }

    .order-total {
        color: red;
        font-size: 24px;
        font-weight: bold;
    }

    .order-summary .order-col:first-child strong {
        font-size: 18px;
        color: #333;
    }

    .order-summary .order-col:nth-last-child(2) {
        font-size: 18px;
    }

    .order-summary .order-col:nth-last-child(1) strong {
        font-size: 24px;
    }

    .order-summary .order-col div {
        font-size: 16px;
    }

    .order-summary .order-col:nth-last-child(1) .order-total {
        font-size: 32px;
    }

    .order-summary .order-total {
        color: red;
        text-align: right;
    }

    input[type="checkbox"] {
        margin-right: 10px;
    }

    button {
        background-color: #e51d3a;
        color: white;
        font-size: 18px;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        width: 100%;
    }

        button:hover {
            background-color: #c01730;
        }

</style>